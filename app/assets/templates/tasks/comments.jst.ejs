<h5> Comments </h5>
<ul class="comments-list fa-ul">
<% comments.each(function(comment){ %>
<% var commenter = Breath.users.get(comment.get('commenter_id'))%>
<li> <i class="fa fa-comments fa-li"></i>  <%= comment.escape('body') %> ~ <span class="label label-inverse"><%= commenter.escape('name') %></span> </li>
<% var commentDate = new Date(comment.get('created_at')) %>
<%= commentDate.toLocaleDateString() + ', ' + commentDate.toLocaleTimeString() %>
<% }) %>
</ul>

<textarea placeholder="Comment..." class="span8 form-control comment-box"></textarea>
